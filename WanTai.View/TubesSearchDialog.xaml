<Window x:Class="WanTai.View.TubesSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:local="clr-namespace:WanTai.View"
        local:WindowCustomizer.CanMaximize="False" 
         local:WindowCustomizer.CanMinimize="False" 
        Title="请输入要查询的条码" Height="205" Width="250" WindowStyle="ThreeDBorderWindow"  Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ShowActivated="False" ShowInTaskbar="False" Icon="/WanTag;component/logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="条码(每个条码一行)：" Margin="20,0,0,0" HorizontalAlignment="Left"  VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Height="80"  Name="txtSearchContent" Margin="20,0,0,0" AcceptsReturn="True" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Text=""/>
        <Button Grid.Row="2" Content="确认" Height="30" Name="btnEnter" Width="80" Click="btnEnter_Click" />
    </Grid>
</Window>
