<Window x:Class="WanTai.View.TecanRestoration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:local="clr-namespace:WanTai.View"
        local:WindowCustomizer.CanMaximize="False" 
         local:WindowCustomizer.CanMinimize="False" 
        Title="仪器复位" Height="180" Width="360" WindowStyle="ThreeDBorderWindow"  Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="/WanTag;component/logo.ico" ShowActivated="True" ShowInTaskbar="False" Unloaded="Window_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="36"></RowDefinition>
        </Grid.RowDefinitions>        
        <ProgressBar Height="30" Name="progressBar1" Margin="5,0,5,0" Grid.Row="1"/>
        <Button Grid.Row="2" Content="确认" Height="30" HorizontalAlignment="Right" Margin="0,0,30,0" Name="btnEnter" Width="80" Click="btnEnter_Click" />
        <Label Content="点击确认后开始仪器复位。" Name="LabPromptingMessage" Grid.Row="0" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" />
    </Grid>
</Window>
