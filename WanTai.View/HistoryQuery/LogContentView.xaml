<Window x:Class="WanTai.View.HistoryQuery.LogContentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="错误查看" Height="800" Width="800" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="/WanTag;component/Resources/logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition> 
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="60" Name="Grid3"></RowDefinition>            
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="1" HorizontalAlignment="Stretch" Name="label_LogContent" VerticalAlignment="Stretch" Grid.Row="1" >
            <TextBlock Name="TextBlock_LogContent" Text="" TextWrapping = "Wrap" />
        </ScrollViewer>
    
        <StackPanel Grid.ColumnSpan="4" Grid.Row="7"  HorizontalAlignment="Center" Name="stackPanel1" VerticalAlignment="Stretch" Orientation="Horizontal" >
            <Button Content="关闭"  Name="cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="cancel_Click" />
        </StackPanel>
     
    </Grid>
</Window>
