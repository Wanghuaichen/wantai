<WanTaiControls:CarrierBase x:Class="WanTai.View.Control.Carrier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WanTaiControls="clr-namespace:WanTai.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="100" Background="LightGray">
    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="#7f9db9" BorderThickness="1,1,1,1">
        <Grid x:Name="GridPlate" Margin="1,3,1,3" Background="DarkGray">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <WanTaiControls:Plate Grid.Column="0" Grid.Row="0" Position="1"></WanTaiControls:Plate>
            <WanTaiControls:Plate Grid.Column="0" Grid.Row="1" Position="2"></WanTaiControls:Plate>
            <WanTaiControls:Plate Grid.Column="0" Grid.Row="2" Position="3"></WanTaiControls:Plate>
        </Grid>
    </Border>
</WanTaiControls:CarrierBase>
