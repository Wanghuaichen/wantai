<WanTaiControls:PlateBase x:Class="WanTai.View.Control.Plate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:WanTaiControls="clr-namespace:WanTai.View.Control"
             mc:Ignorable="d" BorderBrush="Gray" BorderThickness="1"
             d:DesignHeight="100" d:DesignWidth="100">
    <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="#7f9db9" BorderThickness="1,1,1,1">
        <Grid Name="GridPlate" MouseUp="RectangleTest_MouseUp" MouseLeave="RectangleTest_MouseLeave">
        <Grid.Resources>
            <Style x:Key="Hammerhead" TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="/WanTag;component/Resources/hammerhead.png"/>
            </Style>
        </Grid.Resources>
       
       
            <TextBlock Name="txtPlateName"  TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                   <Image  Name="HammerheadImage" Panel.ZIndex="999" VerticalAlignment="Bottom"></Image>
    
       
        </Grid>
    </Border>
</WanTaiControls:PlateBase>
